<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>

  <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Positions</h1>

  <div class="overflow-x-auto">
    <table class="table table-zebra">
      <!-- head -->
      <thead>
        <tr>
          <th>ID</th>
          <th>Position</th>
        </tr>
      </thead>
      <tbody>
        <% positions.forEach((position) => { %>
          <tr>
            <td><a class="btn" href="/positions/<%=position.positionID%>"><%=position.positionID%></a></td>
            <td><%=position.name%></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </br>
    <a href="/positions/new" class="btn btn-block"><i class="fa-regular fa-id-badge"></i><i class="fa-solid fa-plus"></i></a>

  </div>


</body>

</html>